[{
  "name": "api-staging",
  "image": "rorcommunity/ror-api:staging",
  "cpu": 512,
  "memory": 2048,
  "networkMode": "awsvpc",
  "essential": true,
  "portMappings": [{
    "containerPort": 80,
    "hostPort": 80
  }],
  "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
      "awslogs-group": "/ecs/api-staging",
      "awslogs-region": "eu-west-1",
      "awslogs-stream-prefix": "ecs"
    }
  },
  "environment": [{
      "name": "PASSENGER_APP_ENV",
      "value": "production"
    },
    {
      "name": "RELEASE_STAGE",
      "value": "staging"
    },
    {
      "name": "ELASTIC_HOST",
      "value": "${elastic_host_staging}"
    },
    {
      "name": "ELASTIC_PORT",
      "value": "${elastic_port_staging}"
    },
    {
      "name": "AWS_ACCESS_KEY_ID",
      "value": "${access_key}"
    },
    {
      "name": "AWS_SECRET_ACCESS_KEY",
      "value": "${secret_key}"
    },
    {
      "name": "AWS_REGION",
      "value": "${region}"
    },
    {
      "name": "SECRET_KEY",
      "value": "${django_secret_key}"
    },
    {
      "name": "PUBLIC_KEY",
      "value": "${public_key}"
    },
    {
      "name": "SENTRY_DSN",
      "value": "${sentry_dsn}"
    },
    {
      "name": "GITHUB_VERSION",
      "value": "${version}"
    },
    {
      "name": "TOKEN",
      "value": "${token}"
    },
    {
      "name": "DATA_STORE",
      "value": "${data_store}"
    },
    {
      "name": "ROUTE_USER",
      "value": "${route_user}"
    },
    {
      "name": "GITHUB_TOKEN",
      "value": "${github_token}"
    }
  ]
}]