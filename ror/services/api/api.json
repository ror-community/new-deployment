[
  {
    "name": "api",
    "image": "rorcommunity/ror-api:${version}",
    "cpu": 512,
    "memory": 1024,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/api",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "production"
      },
      {
        "name" : "RELEASE_STAGE",
        "value" : "production"
      },
      {
        "name" : "ELASTIC_HOST",
        "value" : "${elastic_host}"
      },
      {
        "name" : "ELASTIC_PORT",
        "value" : "${elastic_port}"
      },
      {
        "name" : "AWS_ACCESS_KEY_ID",
        "value" : "${access_key}"
      },
      {
        "name" : "AWS_SECRET_ACCESS_KEY",
        "value" : "${secret_key}"
      },
      {
        "name" : "AWS_REGION",
        "value" : "${region}"
      },
      {
        "name" : "SECRET_KEY",
        "value" : "${django_secret_key}"
      },
      {
        "name" : "PUBLIC_KEY",
        "value" : "${public_key}"
      },
      {
        "name" : "SENTRY_DSN",
        "value" : "${sentry_dsn}"
      }
    ]
  }
]
