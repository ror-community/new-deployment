[
  {
    "name": "reconcile-dev",
    "image": "rorcommunity/ror-reconcile:dev",
    "cpu": 512,
    "memory": 1024,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/reconcile-dev",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "environment": [
      {
        "name": "RACK_ENV",
        "value": "production"
      },
      {
        "name" : "RELEASE_STAGE",
        "value" : "dev"
      },
      {
        "name": "AWS_ACCESS_KEY_ID",
        "value": "${access_key}"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "value": "${secret_key}"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      },
      {
        "name": "GITHUB_VERSION",
        "value": "${version}"
      }
    ]
  }
]
